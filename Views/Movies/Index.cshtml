@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<body id="content">
<h2>Movies</h2>
  
    <p>
        Sort by:
        <a asp-action="Index" asp-route-sortOrder="title_desc">Title (Descending)</a> |
        <a asp-action="Index" asp-route-sortOrder="release_asc">Release Date (Ascending)</a> |
        <a asp-action="Index" asp-route-sortOrder="release_desc">Release Date (Descending)</a> |
        <a asp-action="Index" asp-route-sortOrder="rating_asc">Rating (Ascending)</a> |
        <a asp-action="Index" asp-route-sortOrder="rating_desc">Rating (Descending)</a>
    </p>

<table class="table" id="movietable">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Rating</th>
            <th>View Reviews</th>
        </tr>
    </thead>
    <tbody>
        @{
        @foreach(var Movie in Model){
            <tr>
                <td>@Movie.Title</td>
                <td>@Movie.ReleaseDate.ToShortDateString()</td>
                <td>@Movie.Rating</td>
                    <!-- View Reviews button -->
                    <td>
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ViewReviews", "Review", new { movieId = Movie.MovieId })'">
                            View Reviews
                        </button>
                      
                    </td>
                 @{
                    // <td>
                     <!-- Create Review button -->
                    //  

                     
                    // //  <a asp-action="Create" asp-controller="Review" asp-route-movieId="@Movie.MovieId" class="btn btn-success" />
                    // //        Create Review
                        
                    // // </td>  
                    //  }
                    // }
                    }
                </tr>

        }
        }
    </tbody>
</table>
</body>

