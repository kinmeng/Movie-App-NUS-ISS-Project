@inject SignInManager<ApplicationUser> SignInManager;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">


    <section class="hero bg-dark text-white" width="100">
    <img src="~/images/HeroSection.png" class="hero-image" />
        <div class="container d-flex flex-column justify-content-center align-items-center">
            <h1 class="display-4">Welcome to Cineverse</h1>
            <p class="lead">Your ultimate community for movie discussions, reviews, and events.</p>
            @if (!SignInManager.IsSignedIn(User))
            {
                <a href="#signup" class="btn btn-primary btn-lg">Join the Community</a>
            }
        </div> 
     </section>

    <section id="features" class="features py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="~/images/Reviews.png" alt="Reviews" class="mb-3">
                    <h3>In-Depth Reviews</h3>
                    <p>Read and write detailed reviews about the latest and upcoming movies.</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="~/images/discussions-icon.png" alt="Discussions" class="mb-3">
                    <h3>Active Discussions</h3>
                    <p>Engage in lively discussions with fellow movie enthusiasts.</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="/images/events-icon.png" alt="Events" class="mb-3">
                    <h3>Exclusive Events</h3>
                    <p>Stay updated with the latest premieres, events, and screenings.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="community" class="community bg-light py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Join Our Community</h2>
                <p>Connect with movie lovers from around the world.</p>
            </div>
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="/images/profile-male.png" alt="Profiles" class="mb-3">
                    <img src="/images/profile-female.png" alt="Profiles" class="mb-3">
                    <h3>Personal Profiles</h3>
                    <p>Create your profile and share your movie preferences.</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="/images/community.png" alt="Groups" class="mb-3">
                    <h3>Interest Groups</h3>
                    <p>Join groups based on your favorite genres and filmmakers.</p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="/images/fun-activities.png" alt="Activities" class="mb-3">
                    <h3>Fun Activities</h3>
                    <p>Participate in quizzes, polls, and movie marathons.</p>
                </div>
            </div>
        </div>
    </section>

    @if (!SignInManager.IsSignedIn(User))
    {
        <section id="signup" class="cta text-center py-5">
            <div class="container">
                <h2>Ready to Join the Fun?</h2>
                <p>Sign up today and become part of our community today!</p>
                <a href="Identity/Account/register" class="btn btn-primary btn-lg">Sign Up Now</a>
            </div>
        </section>
    }

</div>

<style>
    .hero {
    position: relative;
    overflow: hidden;
    height: 300px; /* Adjust height as needed */
    }

    .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensure the image covers the entire container */ 
     position: absolute;
    top: 0;
    left: 0;
    z-index: 0; /* Ensure the image stays behind the text */
    opacity:0.5;    
    }

    .container {
    position: relative;
    z-index: 1; /* Ensure text content appears above the image */
    text-align: center; /* Center align text */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically center content */
    align-items: center; /* Horizontally center content */
    height: 100%; /* Ensure container takes full height of hero section */
    padding: 20px; /* Add padding as needed */
    max-width:100% !important;
    }

    .display-4 {
    font-size: 3rem; /* Adjust font size as needed */
    margin-bottom: 20px; /* Optional: Add spacing between elements */
    }

    .lead {
    font-size: 1.5rem; /* Adjust font size as needed */
    margin-bottom: 30px; /* Optional: Add spacing between elements */
    }

    .btn-primary {
    font-size: 1.2rem; /* Adjust font size as needed */
    padding: 10px 20px; /* Adjust button padding as needed */
    }
</style>
